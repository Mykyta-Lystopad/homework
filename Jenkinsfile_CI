pipeline {
    agent {
        label 'docker'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clone your Git repository
                sh 'git clone https://github.com/Mykyta-Lystopad/homework.git'
            }
        }

        stage('Static Code Analysis') {
            steps {
                // Run SonarQube analysis
                echo "Run SonarQube analysis"
                // Make sure SonarQube is correctly set up in your environment
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build a Docker image
                // Use a Dockerfile and specify the image name and tag
                sh 'docker build -t google-class:latest .'
            }
        }

        stage('Tag Docker Image') {
            steps {
                // Tag the Docker image with a specific version
                sh 'docker tag google-class:latest google-class:1.0'
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                // Authenticate with Docker Hub (you may need to set up credentials)
                sh 'docker login -u nominonik -p swe32!@ASE'

                // Push the Docker image to Docker Hub
                sh 'docker push nominonik/google-class:latest'
                sh 'docker push nominonik/google-class:1.0'
            }
        }
    }
}
